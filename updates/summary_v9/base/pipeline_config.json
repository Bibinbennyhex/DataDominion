{
    "environment": "production",
    "version": "9.0",
    
    "catalog": {
        "name": "primary_catalog",
        "type": "glue",
        "warehouse": "s3://in-cs-ivaps-data-bucket-prod-ap-south-1/ivaps_prod/persistent/ascend_summary/summary_complete/"
    },
    
    "tables": {
        "source": "spark_catalog.edf_gold.ivaps_consumer_accounts_all",
        "summary": "primary_catalog.edf_gold.summary",
        "latest_summary": "primary_catalog.edf_gold.latest_summary"
    },
    
    "keys": {
        "primary": "cons_acct_key",
        "partition": "rpt_as_of_mo",
        "timestamp": "base_ts"
    },
    
    "history": {
        "length": 36
    },
    
    "rolling_columns": [
        {
            "name": "balance",
            "source_column": "balance_am",
            "mapper_expr": "CASE WHEN balance_am IN (-2147483647, -1) THEN NULL ELSE balance_am END",
            "data_type": "Integer"
        },
        {
            "name": "payment",
            "source_column": "actual_payment_am",
            "mapper_expr": "CASE WHEN actual_payment_am IN (-2147483647, -1) THEN NULL ELSE actual_payment_am END",
            "data_type": "Integer"
        },
        {
            "name": "credit_limit",
            "source_column": "credit_limit_am",
            "mapper_expr": "credit_limit_am",
            "data_type": "Integer"
        },
        {
            "name": "past_due",
            "source_column": "past_due_am",
            "mapper_expr": "CASE WHEN past_due_am IN (-2147483647, -1) THEN NULL ELSE past_due_am END",
            "data_type": "Integer"
        },
        {
            "name": "days_past_due",
            "source_column": "days_past_due",
            "mapper_expr": "days_past_due",
            "data_type": "Integer"
        },
        {
            "name": "payment_rating",
            "source_column": "payment_rating_cd",
            "mapper_expr": "CASE WHEN days_past_due < 0 THEN asset_class_cd WHEN days_past_due >= 0 AND days_past_due <= 29 THEN '0' WHEN days_past_due >= 30 AND days_past_due <= 59 THEN '1' WHEN days_past_due >= 60 AND days_past_due <= 89 THEN '2' WHEN days_past_due >= 90 AND days_past_due <= 119 THEN '3' WHEN days_past_due >= 120 AND days_past_due <= 149 THEN '4' WHEN days_past_due >= 150 AND days_past_due <= 179 THEN '5' WHEN days_past_due >= 180 THEN '6' ELSE NULL END",
            "data_type": "String"
        },
        {
            "name": "asset_class",
            "source_column": "asset_class_cd",
            "mapper_expr": "asset_class_cd",
            "data_type": "String"
        }
    ],
    
    "grid_columns": [
        {
            "name": "payment_history_grid",
            "source_history": "payment_rating_history",
            "placeholder": "?",
            "separator": ""
        }
    ],
    
    "performance": {
        "broadcast_threshold": 10000000,
        "target_records_per_partition": 5000000,
        "min_partitions": 32,
        "max_partitions": 16384
    },
    
    "spark": {
        "app_name": "SummaryPipeline_v9",
        "adaptive_enabled": true,
        "adaptive_coalesce": true,
        "adaptive_skew_join": true,
        "broadcast_timeout": 600
    }
}
